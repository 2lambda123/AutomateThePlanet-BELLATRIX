<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <LangVersion>9.0</LangVersion>
        <IsPackable>false</IsPackable>
        <!--<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>-->
        <Configurations>Debug;Release;ObfuscatedNuGets</Configurations>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <RunAnalyzersDuringBuild>true</RunAnalyzersDuringBuild>
        <RunAnalyzersDuringLiveAnalysis>true</RunAnalyzersDuringLiveAnalysis>
        <RunAnalyzers>true</RunAnalyzers>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <WarningsAsErrors />
        <NoWarn>NU1701;NU1702;NU1705;</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <CodeAnalysisRuleSet>..\StyleCopeRules.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>

    <ItemGroup>
        <AdditionalFiles Include="..\stylecop.json" Link="stylecop.json" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Bellatrix.Desktop.DemoApps" Version="1.3.1" />
        <PackageReference Include="Bellatrix.FFmpeg.Recorder" Version="1.3.0" />
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.8.0" />
        <PackageReference Include="Moq" Version="4.15.2" />
        <PackageReference Include="MSTest.TestAdapter" Version="2.1.2" />
        <PackageReference Include="MSTest.TestFramework" Version="2.1.2" />
        <PackageReference Include="System.Security.Permissions" Version="5.0.0" />
        <PackageReference Include="Unity" Version="5.11.9" />
        <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
            <NoWarn>NU1701</NoWarn>
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.1">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>

        <PackageReference Include="Appium.WebDriver" Version="4.2.1" />

        <!--Do not Update to 3.14.0, it has bugs incompatible with Appium.WebDriver 3.0.0.1-->
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Framework\Bellatrix.Allure\Bellatrix.Results.Allure.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.Asserts\Bellatrix.Assertions.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.Desktop.MSTest\Bellatrix.Desktop.MSTest.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.Desktop.TestExecutionExtensions\Bellatrix.Desktop.TestExecutionExtensions.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.Desktop\Bellatrix.Desktop.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.Layout.Assertions\Bellatrix.Layout.Assertions.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.Layout\Bellatrix.Layout.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.MSTest\Bellatrix.MSTest.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.Logging\Bellatrix.Logging.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.TestExecutionExtensions.Video\Bellatrix.TestExecutionExtensions.Video.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.TestExecutionExtensions\Bellatrix.TestWorkflowPlugins.csproj" />
        <ProjectReference Include="..\..\Framework\Bellatrix.VideoRecording\Bellatrix.VideoRecording.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Categories Include="categories.json" />
    </ItemGroup>

    <Target Name="CopyCategoriesToAllureFolder">
        <Copy SourceFiles="@(Categories)" DestinationFolder="$(OutputPath)\allure-results" />
    </Target>

    <ItemGroup>
      <None Include="..\..\Framework\AutomateThePlanet.licenseheader" Link="AutomateThePlanet.licenseheader" />
    </ItemGroup>

    <ItemGroup>
        <None Update="allureConfig.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="testFrameworkSettings.Debug.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
        <CallTarget Targets="CopyCategoriesToAllureFolder" />
    </Target>
</Project>