<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <IsPackable>false</IsPackable>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <Configurations>Debug;Release</Configurations>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <PropertyGroup>
    <CodeAnalysisRuleSet>StyleCopeRules.ruleset</CodeAnalysisRuleSet>
    <RootNamespace>Bellatrix.SpecFlow.Web.Tests</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn>1701;1702;1705;</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="stylecop.json" Link="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Bellatrix.FFmpeg.Recorder" Version="1.3.0" />
    <PackageReference Include="Bellatrix.Licensing" Version="1.4.4" />
    <PackageReference Include="Bellatrix.ServiceContainer" Version="1.5.0.3" />
    <PackageReference Include="Bellatrix.ServiceContainer.Unity" Version="1.5.0.3" />
    <PackageReference Include="Bellatrix.SpecFlow.NUnit" Version="1.5.0.3" />
    <PackageReference Include="Bellatrix.SpecFlow.VideoRecording" Version="1.5.0.3" />
    <PackageReference Include="Bellatrix.SpecFlow.Web" Version="1.5.0.3" />
    <PackageReference Include="Bellatrix.SpecFlow.Web.NUnit" Version="1.5.0.3" />
    <PackageReference Include="Bellatrix.SpecFlow.Web.TestExecutionExtensions.Browser" Version="1.5.0.3" />
    <PackageReference Include="Bellatrix.VideoRecording.FFmpeg" Version="1.5.0.3" />
    <PackageReference Include="Bellatrix.Web" Version="1.5.0.3" />
    <PackageReference Include="Bellatrix.Web.Chrome" Version="1.3.2.7403" />
    <PackageReference Include="Bellatrix.Web.Firefox" Version="1.3.2.240" />
    <PackageReference Include="Bellatrix.Web.Opera" Version="1.3.3.242" />
    <PackageReference Include="Bellatrix.Web.Edge" Version="1.5.0.75" />
    <PackageReference Include="Bellatrix.Web.InternetExplorer" Version="1.3.0.3900" />
    <PackageReference Include="Selenium.Support" Version="3.141.0" />
    <PackageReference Include="Selenium.WebDriver" Version="3.141.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.1.0" />
    <!--<PackageReference Include="NUnit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.13.0" />-->
    <PackageReference Include="SpecFlow" Version="3.0.213" />
    <PackageReference Include="SpecFlow.NUnit" Version="3.0.213" />
    <PackageReference Include="SpecFlow.NUnit.Runners" Version="3.0.213" />
    <PackageReference Include="SpecFlow.Tools.MsBuild.Generation" Version="3.0.213" />
    <PackageReference Include="Unity" Version="5.10.3" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <NoWarn>NU1701</NoWarn>
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="BrowserStackIntegration.feature.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>BrowserStackIntegration.feature</DependentUpon>
    </Compile>
    <Compile Update="CommonServices.feature.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>CommonServices.feature</DependentUpon>
    </Compile>
    <Compile Update="CrossBrowserTestingIntegration.feature.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>CrossBrowserTestingIntegration.feature</DependentUpon>
    </Compile>
    <Compile Update="GridIntegration.feature.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>GridIntegration.feature</DependentUpon>
    </Compile>
    <Compile Update="PageObjectsFeature.feature.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>PageObjectsFeature.feature</DependentUpon>
    </Compile>
    <Compile Update="SauceLabsIntegration.feature.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>SauceLabsIntegration.feature</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="specflow.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="SpecFlowFeature.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>SpecFlowFeature.feature.cs</LastGenOutput>
    </None>
    <None Update="testFrameworkSettings.Debug.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="testFrameworkSettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="testFrameworkSettings.Release.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>


  <ItemGroup>
    <SpecFlowFeatureFiles Update="BrowserStackIntegration.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>BrowserStackIntegration.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
    <SpecFlowFeatureFiles Update="CommonServices.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>CommonServices.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
    <SpecFlowFeatureFiles Update="CrossBrowserTestingIntegration.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>CrossBrowserTestingIntegration.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
    <SpecFlowFeatureFiles Update="GridIntegration.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>GridIntegration.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
    <SpecFlowFeatureFiles Update="PageObjectsFeature.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>PageObjectsFeature.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
    <SpecFlowFeatureFiles Update="SauceLabsIntegration.feature">
      <Generator>SpecFlowSingleFileGenerator</Generator>
      <LastGenOutput>SauceLabsIntegration.feature.cs</LastGenOutput>
    </SpecFlowFeatureFiles>
  </ItemGroup>

  <Target Name="AfterUpdateFeatureFilesInProject">
    <ItemGroup>
      <Compile Include="**\*.feature.cs" Exclude="@(Compile)" />
    </ItemGroup>
  </Target>
</Project>