<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFramework>net5.0</TargetFramework>
	<LangVersion>9.0</LangVersion>
	<IsPackable>false</IsPackable>
	<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	<Configurations>Debug;Release</Configurations>
	<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
	<RunAnalyzersDuringBuild>true</RunAnalyzersDuringBuild>
	<RunAnalyzersDuringLiveAnalysis>true</RunAnalyzersDuringLiveAnalysis>
	<RunAnalyzers>true</RunAnalyzers>
	<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
	<WarningsAsErrors />
	<NoWarn>NU1701;NU1702;NU1705;</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
	<CodeAnalysisRuleSet>StyleCopeRules.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
	<AdditionalFiles Include="stylecop.json" Link="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
	<PackageReference Include="Bellatrix.FFmpeg.Recorder" Version="1.3.0" />
	<PackageReference Include="Bellatrix.Web.Chrome" Version="1.9.5.87" />
	<PackageReference Include="Bellatrix.Web.Edge" Version="1.9.5.87" />
	<PackageReference Include="Bellatrix.Web.Firefox" Version="1.9.5.270" />
	<PackageReference Include="Bellatrix.Web.Opera" Version="1.9.5.85" />
	<PackageReference Include="Bellatrix.Web.InternetExplorer" Version="1.3.0.3900" />
	<PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.8.0" />
	<PackageReference Include="MSTest.TestAdapter" Version="2.1.2" />
	<PackageReference Include="MSTest.TestFramework" Version="2.1.2" />
	<PackageReference Include="Unity" Version="5.11.9" />
	<PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
	  <NoWarn>NU1701</NoWarn>
	  <PrivateAssets>all</PrivateAssets>
	  <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
	</PackageReference>
	<PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.1">
	  <PrivateAssets>all</PrivateAssets>
	  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
	</PackageReference>
  </ItemGroup>

  <ItemGroup>
	<ProjectReference Include="..\..\Framework\Bellatrix.TestExecutionExtensions.Common\Bellatrix.TestExecutionExtensions.Common.csproj" />
	<ProjectReference Include="..\..\Framework\Bellatrix.TestExecutionExtensions.ExceptionsLogging\Bellatrix.TestExecutionExtensions.ExceptionsLogging.csproj" />
	<ProjectReference Include="..\..\Framework\Bellatrix.VideoRecording.FFmpeg\Bellatrix.VideoRecording.FFmpeg.csproj" />
	<ProjectReference Include="..\..\Framework\Bellatrix.VideoRecording\Bellatrix.VideoRecording.csproj" />
	<ProjectReference Include="..\..\Framework\Bellatrix.Web.MSTest\Bellatrix.Web.MSTest.csproj" />
	<ProjectReference Include="..\..\Framework\Bellatrix.Web.TestExecutionExtensions.LoadTesting\Bellatrix.Web.TestExecutionExtensions.LoadTesting.csproj" />
	<ProjectReference Include="..\..\Framework\Bellatrix.Web.TestExecutionExtensions\Bellatrix.Web.TestExecutionExtensions.Browser.csproj" />
	  
  </ItemGroup>

  <ItemGroup>
	<None Update="StyleCopeRules.ruleset">
	  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	</None>
	<None Update="testFrameworkSettings.$(Configuration).json">
	  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	</None>
	<None Update="testPage.html">
	  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	</None>
	<None Update="TestPages\Grid\Grid.html">
	  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	</None>
	<None Update="TestPages\Table\table.css">
	  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	</None>
	<None Update="TestPages\Table\table.html">
	  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	</None>
	<None Update="TestPages\Table\table.js">
	  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	</None>
  </ItemGroup>
</Project>
